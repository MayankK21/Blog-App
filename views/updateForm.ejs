<% include partials/header %>



<div class="myContainer">
	

	<div class="innerBlog">
		<!-- <form style="text-align: center;" action="/blogs/<%= blog._id%>" method="POST"> -->
		<form style="text-align: center;" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
			<h1>Update <%= blog.title%></h1>
			<hr><br>
			<label for="newTitle">Title of the Blog: </label>
			<input id="newTitle" class="form-control" type="text" name="newTitle" value="<%=blog.title%>">
			<br><br>

			<label for="newImage">Image URL: </label>
			<input id="newImage" class="form-control" type="text" name="newImage" value="<%=blog.image%>">
			<br><br>

			<label for="newContent">Content: </label>
			<textarea style="border-radius: 10px;" id="newContent" class="form-control" name="newContent" rows="3" required><%=blog.content%></textarea><br><br>

			<label for="newPrice">Price: </label>
			<input id="newPrice" class="form-control" type="number" name="newPrice" value="<%=blog.price%>">
			<br>

			<button class="btn btn-outline-danger" type="submit"><i class="fa fa-sign-in"></i>Update</button>

		</form>	
	</div>
	
</div>





<% include partials/footer %>